@model LeagueModel
@{
    ViewData["Title"] = "Gallager Premiership";
}
    <div class="text-center">
        <h1>Gallager Premiership</h1>
        <br />
        <div class="container">
            <div class="row" style="display:inline-block;">
                @{
                    for (int i = 0; i < @Model.Teams.Count; i++)
                    {
                        {
                            <form action="TeamStats" method="POST" id="form_id" class="grow" style="display:inline-block;">
                                <input type="hidden" name="teamnumber" value="@i" ; />
                                <input type="hidden" name="leagueId" value="4414" ; />
                                <input type="image" name="teamnumber" onclick="submittheform()" value="@i" src="@Model.Teams[i].ToString().Split("*")[7]" height=100px; />
                            </form>


                        }
                        <script>
                            function submittheform() {
                                document.forms['form_id'].submit();
                            }
                        </script>


                    }

                }


            </div>
        </div>
    </div>


